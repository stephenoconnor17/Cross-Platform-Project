<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CROSSPLATFORM2DGAME.MainPage">

    <Grid>
        <AbsoluteLayout x:Name="mapLayout"
                    WidthRequest="20000"
                    HeightRequest="15000"
                    BackgroundColor="LightGreen">

        </AbsoluteLayout>
        <AbsoluteLayout x:Name="playerLayout"
                    WidthRequest="50"
                    HeightRequest="100">

            <Image x:Name="playerView"
               Source="player.png"
               HeightRequest="100"
               WidthRequest="50"/>
        </AbsoluteLayout>
    </Grid>
</ContentPage>
